{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
        {
            "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
            "headers": [{
                "key": "Access-Control-Allow-Origin",
                "value": "*"
            }]
        }, {
            "source": "**/games/**/)",
            "headers": [{
                "key": "Cache-Control",
                "value": "max-age=300"
            }]
        }, {
            "source": "**/*.@(jpg|jpeg|gif|png)",
            "headers": [{
                "key": "Cache-Control",
                "value": "max-age=7200"
            }]
        }, {
            "source": "**/main.*.js",
            "headers": [{
                "key": "Cache-Control",
                "value": "max-age=30"
            }]
        }, {
            "source": "404.html",
            "headers": [{
                "key": "Cache-Control",
                "value": "max-age=300"
            }]
        }
    ]
  }
}
